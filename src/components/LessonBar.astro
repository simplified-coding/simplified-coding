<div id="doc-body">
  <div class="flex justify-evenly items-center m-4 p-2 bg-sc-card-bg rounded-lg">

    <div class="border-none w-[18vw]">
      <h1
        class="text-center text-2xl font-semibold underline py-1"
        id={`${lesson.slug}-status`}
      >
        Μάθημα {lesson.slug.split("_")[1]}
      </h1>

      <h3 class="text-center">
        {lesson.title}
      </h3>
    </div>

    <div
      class="border-none my-4 w-[20vw] text-center px-2"
    >
      <p>{lesson.description}</p>
    </div>

    <div class="flex flex-row items-center">

      <button
        onclick={`window.open("/view/${Astro.params.lang}?lesson=${lesson.slug}", "_self")`}
        class="mx-1.5 my-2 px-4 py-2 bg-indigo-800 hover:bg-indigo-600 text-sc-white rounded"
      >
        Άρχισε <br> (χωρίς τον editor)
      </button>

      <button
        onclick={`window.open("/editor/${Astro.params.lang}?lesson=${lesson.slug}", "_self")`}
        class="mx-1.5 my-2 px-4 py-2 bg-indigo-800 hover:bg-indigo-600 text-sc-white rounded"
        disabled={course.viewOnly == true}
      >
        Άρχισε <br> (με τον editor)
      </button>

      <button 
        class="mx-1.5 my-2 px-4 py-2 bg-gray-800 hover:bg-gray-600 disabled:bg-gray-900 text-sc-white rounded" disabled
        >
        Aσκησεις
      </button>

      <button 
        class="mx-1.5 my-2 px-4 py-2 max-w-[20vw] undo-completed-lesson bg-red-800 hover:bg-red-600 text-sc-white rounded" data-lesson={lesson.slug} data-course={course.slug}
      >
        Αναίρεση Ολοκλήρωσης <br> Μαθήματος
      </button>

    </div>
  </div>
</div>