  <script>
    if (/iPhone|iPad|iPod|Android|webOS|BlackBerry|Windows Phone/i.test(
      navigator.userAgent
    )) {
      Array.from(document.getElementsByClassName("icons-social")).forEach(i => i.style = `font-size: ${Math.floor(window.innerWidth / 7) / 1.5}px`)
    }

  </script>
